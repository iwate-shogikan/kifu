#!/usr/bin/env bash
# pre-commit: kifu プロジェクト用
# - 追跡済みの変更/削除/移動は自動ステージ（git add -u）
# - data/**/*.kif の新規ファイルだけ自動ステージ（NUL区切りで日本語名対応）
# - 生成物（data/kifu_list.json, index.html）は常に再生成して差分があればステージ
# - 何もステージされていなければコミットを中止（空コミット防止）

set -euo pipefail

echo "[pre-commit] start"

# リポジトリルートへ移動（念のため）
repo_root="$(git rev-parse --show-toplevel)"
cd "$repo_root"

# Pythonコマンドを決定
if command -v python >/dev/null 2>&1; then
  PY=python
elif command -v python3 >/dev/null 2>&1; then
  PY=python3
else
  echo "[pre-commit] ERROR: python が見つかりません" >&2
  exit 2
fi

echo "[pre-commit] regenerate artifacts..."
$PY generate_kifu_list.py
$PY generate_index_with_search.py

# 追跡済みの変更/削除/移動をステージ（新規は含めない）
echo "[pre-commit] stage tracked changes (add -u)"
git add -u

# data/ 配下の新規 .kif を NUL 区切りで安全に追加（日本語名対応）
echo "[pre-commit] stage new .kif under data/"
git ls-files -z -o --exclude-standard -- 'data/**/*.kif' \
  | xargs -0 -r -I{} git add "{}"

# 生成物は差分がある時のみステージ
if ! git diff --quiet -- data/kifu_list.json 2>/dev/null; then
  git add data/kifu_list.json || true
fi
if ! git diff --quiet -- index.html 2>/dev/null; then
  git add index.html || true
fi

# 何もステージされていなければコミットを中止（空コミット防止）
if git diff --cached --quiet; then
  echo "[pre-commit] No staged changes. Abort commit." >&2
  exit 1
fi

echo "[pre-commit] done."

